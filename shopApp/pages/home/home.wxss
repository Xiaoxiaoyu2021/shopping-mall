/* pages/home/home.wxss */
/* 搜索框 */
.topinp {
    width: 100%;
    height: 120rpx;
    /* background-color: #EDE1CA; */
    background: linear-gradient(to top, #fff, #88a);
    border-top: 1px solid #88a;
    display: flex;
    justify-content: space-evenly;
}
.topinp .topinps{
    width: 80%;
    height: 80rpx;
    background-color: #fff;
    display: inline-block;
    margin: 20rpx auto;
    display: flex;
    justify-content: space-between;
    position: relative;
    border-radius: 30px;
}
.topinp .topinpsousuo{
    widows: 20% !important;
    display: inline-block !important;
    /* background-color: #fff; */
    font-size: 50rpx;
    position: absolute;
    top: 0rpx;
    left: 14rpx;
}

.topinp input {
    width: 90%;
    height: 80rpx;
    background-color: #FFF;
    border-bottom-right-radius: 50rpx;
    border-top-right-radius: 50rpx;
    display: inline-block !important;
    position: absolute;
    top: 0rpx;
    right: 0rpx;
}

/* 轮播图 */
.banner image {
    width: 100%;
}

page {
    background-color: #f5f5f5;
}

/*  分类功能 */
.category {
    display: flex;
    flex-wrap: wrap;
    padding-top: 30rpx;
    margin-bottom: 24rpx;
    background-color: #fff;
}

.category .item {
    width: 25%;
    text-align: center;
    margin-bottom: 24rpx;
}

.category .item text {
    display: block;
    font-size: 28rpx;
}

/* 1px = 2rpx */
.category image {
    width: 80rpx;
    height: 80rpx;
}

/* 商品列表 */
.commonTitle {
    height: 104rpx;
    line-height: 104rpx;
    background-color: #fff;
    font-size: 36rpx;
    border-bottom: 1px solid #bfbfbf;
    text-indent: 1em;
}

.goodsli {
    width: 100%;
    /* padding: 0 6%; */
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    background-color: #F0F0F0;
}

.goodsli .goodslist {
    width: 42%;
    /* display: flex; */
    padding: 20rpx 10rpx;

    background-color: #fff;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
}

.goodsli .goodslist .left {
    width: 240rpx;
    text-align: center;
}

.goodsli .goodslist .right {
    /* 剩下宽度分配给右侧 */
    height: 170rpx;
    /* 相对定位 */
    position: relative;
    margin-right: 20rpx;
}

.goodsli .goodslist .left image {
    width: 200rpx;
    height: 200rpx;
    display: inline-block;
    margin: 0 58rpx;
}

.goodsli .goodslist .right image {
    width: 50rpx;
    height: 50rpx;
}

.goodsli .goodslist .right .goods_name {
    font-size: 30rpx;
    color: #808080;
    height: 86rpx;
    /* 溢出隐藏 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    margin-bottom: 10rpx;
}

.goodsli .goodslist .right .goods_address {
    margin-left: 10rpx;
    font-size: 24rpx;
    color: #929292;
}

.goodsli .goodslist .right .goods_price {
    font-size: 30rpx;
    color: #FF1493;
}
.goodsli .goodslist .right .goods_price2 {
    font-size: 25rpx;
    color: #777476;
    text-decoration: line-through;
    display: inline-block;
    margin:6rpx;
}
.goodsli .goodslist .right .car {
    position: absolute;
    right: 0px;
    bottom: 0px;
}
