/* pages/car/car.wxss */
page {
    background-color: #f5f5f5;
}

/* 商品列表 */
.goodslist {
    display: flex;
    padding: 20rpx 0rpx;
    background-color: #fff;
    margin-bottom: 2rpx;
}

.goodslist .left {
    width: 240rpx;
    text-align: center;
}

.goodslist .left image {
    width: 200rpx;
    height: 200rpx;
}

.goodslist .right {
    /* 剩下宽度分配给右侧 */
    flex: 1;
    height: 200rpx;
    position: relative;
    margin-right: 20rpx;
}

.goodslist .right image {
    width: 44rpx;
    height: 44rpx;
}

.goodslist .right .goods_name {
    font-size: 34rpx;
    color: #808080;
    height: 100rpx;
    overflow: hidden;
}

.goodslist .right .goods_andress {
    font-size: 24rpx;
    color: #929292;
    margin-top: 20rpx;
}

.goodslist .right .goods_price {
    font-size: 34rpx;
    color: #ff1493;
    margin-top: 40rpx;
}

.goodslist .right .car {
    position: absolute;
    right: 0px;
    bottom: 0px;
}

.goodslist .carBtn{
    width: 200rpx;
    position: absolute;
    right: 100rpx;
    bottom: 0px;
}

.goodslist .carBtn .btn{
    width: 52rpx;
    height: 52rpx;
    text-align: center;
    line-height: 52rpx;
    font-size: 24rpx;
    float: left;
    border: 1px solid #b2b2b2;
}

.goodslist .carBtn .num {
    float: left;
    text-align: center;
    width: 80rpx;
    height: 52rpx;
    line-height: 52rpx;
    border-top: 1px solid #b2b2b2;
    border-bottom: 1px solid #b2b2b2;
}

/* 底部价格 */
.bottomNav{
    position: fixed;
    left: 0px;
    bottom: 0px;
    background-color: #fff;
    width: 100%;
    height: 100rpx;
    border-bottom: 1rpx solid #f5f6f7;
    font-size: 28rpx;
}

.bottomNav .warp{
    padding: 0 20rpx;
    line-height: 100rpx;
}

.bottomNav .warp text{
    color: #f00;
}

.bottomNav .warp .order{
    float: right;
    height: 60rpx;
    line-height: 60rpx;
    width: 160rpx;
    color: #fff;
    background-color: #ff7e3d;
    text-align: center;
    margin-top: 20rpx;
    border-radius: 2rpx;
}

/* 购物车为空提示 */
.goodsNull {
    text-align: center;
    font-size: 40rpx;
    color: #929292;
    margin-bottom: 200rpx;
}

.goodsNull .iconfont{
    font-size: 120rpx;
    margin: 40rpx;
}

/* 猜你喜欢 */
.goodcnxh .goodai{
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20rpx;
}
.goodcnxh .goodai .icon-cainixihuan{
    font-size: 60rpx;
    color: red;
}
.goodcnxh .goodai .h1{
    font-size: 50rpx;
    color: #B21016;
}
.goodcnxh .goodai .icon-xuxian{
    font-size: 50rpx;
    color: #F47378;
    
}
.goodsli {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
}

.goodsli .goodslist {
    width: 42%;
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx 10rpx;

    background-color: #fff;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
}

.goodsli .goodslist .left {
    width: 240rpx;
    text-align: center;
}

.goodsli .goodslist .right {
    /* 剩下宽度分配给右侧 */
    height: 170rpx;
    margin-right: 20rpx;
}

.goodsli .goodslist .left image {
    width: 200rpx;
    height: 200rpx;
    display: inline-block;
    margin: 0 58rpx;
}

.goodsli .goodslist .right image {
    width: 50rpx;
    height: 50rpx;
}

.goodsli .goodslist .right .goods_name {
    font-size: 30rpx;
    color: #808080;
    height: 86rpx;
    /* 溢出隐藏 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    margin-bottom: 10rpx;
}

.goodsli .goodslist .right .goods_address {
    margin-left: 10rpx;
    font-size: 24rpx;
    color: #929292;
}

.goodsli .goodslist .right .goods_price {
    font-size: 30rpx;
    color: #FF1493;
    margin: 0;
}
.goodsli .goodslist .right .goods_price2 {
    font-size: 25rpx;
    color: #777476;
    text-decoration: line-through;
    display: inline-block;
    margin:6rpx;
}
.goodsli .goodslist .right .car {
    position: absolute;
    right: 0px;
    bottom: 0px;
}