/* pages/addshou/addshou.wxss */
.goodsli {
    width: 100%;
    /* padding: 0 6%; */
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    background-color: #F0F0F0;
}

.goodsli .goodslist {
    width: 42%;
    /* display: flex; */
    padding: 20rpx 10rpx;
    position: relative;
    background-color: #fff;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
}
.goodsli .goodslist .icon-chushaixuanxiang{
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    font-size: 40rpx;
}
.goodsli .goodslist .left {
    width: 240rpx;
    text-align: center;
}

.goodsli .goodslist .right {
    /* 剩下宽度分配给右侧 */
    height: 170rpx;
    /* 相对定位 */
    position: relative;
    margin-right: 20rpx;
}

.goodsli .goodslist .left image {
    width: 200rpx;
    height: 200rpx;
    display: inline-block;
    margin: 0 58rpx;
}

.goodsli .goodslist .right image {
    width: 50rpx;
    height: 50rpx;
}

.goodsli .goodslist .right .goods_name {
    font-size: 30rpx;
    color: #808080;
    height: 86rpx;
    /* 溢出隐藏 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    margin-bottom: 10rpx;
}

.goodsli .goodslist .right .goods_address {
    margin-left: 10rpx;
    font-size: 24rpx;
    color: #929292;
}

.goodsli .goodslist .right .goods_price {
    font-size: 30rpx;
    color: #FF1493;
}
.goodsli .goodslist .right .goods_price2 {
    font-size: 25rpx;
    color: #777476;
    text-decoration: line-through;
    display: inline-block;
    margin:6rpx;
}
.goodsli .goodslist .right .car {
    position: absolute;
    right: 0px;
    bottom: 0px;
}